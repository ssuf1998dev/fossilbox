{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2022"],
    "moduleDetection": "force",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@app/*": ["./app/*"],
      "@server/*": ["./server/*"]
    },
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["server/**/*", "utils"]
}
